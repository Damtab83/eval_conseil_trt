{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1 class="text-center my-8 py-4">Annonce : {{ notice.title }}</h1>

    <div class="container">
        <table class="table">
        {# <caption>Détails de l'annonce</caption> #}
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ notice.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ notice.description }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ notice.location }}</td>
                </tr>
                <tr>
                    <th>Salaire</th>
                    <td>{{ notice.salary }}</td>
                </tr>
                <tr>
                    <th>Horaires</th>
                    <td>{{ notice.schedule }}</td>
                </tr>
                <tr>
                    <th>Créée le: </th>
                    <td>{{ notice.createdAt ? notice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_notice_index') }}" class="btn btn-primary mr-4">retour à la liste</a>

        <a href="{{ path('app_notice_edit', {'id': notice.id}) }}" class="btn btn-primary">modifier</a>

        {{ include('notice/_delete_form.html.twig') }}
    </div>
{% endblock %}
